.searchContainer {
    padding: 0 20rpx;
}

.header {
    display: flex;
    padding: 20rpx 0;
    height: 60rpx;
    line-height: 60rpx;
}

.searchInput {
    position: relative;
    flex: 1;
    border: 1px solid #eee;
    border-radius: 30rpx;
}

.searchInput input {
    margin-left: 50rpx;
    height: 60rpx;
}

.deleteSearch {
    position: absolute;
    right: 10rpx;
    top: 0;
    z-index: 10;
}

.cancle {
    width: 100rpx;
    text-align: center;
}

.searchicon {
    position: absolute;
    left: 0rpx;
}

.input-placeholder {
    color: #d43c33;
    font-size: 28rpx;
}


/* 搜索内容 */

.showSearchContent {
    padding: 0 20rpx;
}

.searchContent {
    color: #d43c33;
    font-size: 24rxp;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1px solid #d43c33;
}

.searchItem {
    display: flex;
    height: 80rpx;
    line-height: 80rpx;
}

.searchItem .content {
    flex: 1;
    margin-left: 20rpx;
    border-bottom: 1px solid #eee;
    font-size: 26rpx;
}


/* 历史搜索记录 */

.historyList {
    display: flex;
    flex-wrap: wrap;
    line-height: 50rpx;
}

.history .header {
    display: flex;
    justify-content: space-between;
}

.history .title {
    height: 50rpx;
    font-size: 28rpx;
}

.history .historyItem {
    height: 50rpx;
    font-size: 26rpx;
    background: #ededed;
    padding: 0rpx 30rpx;
    border-radius: 20rpx;
    margin-left: 20rpx;
    margin-bottom: 20rpx;
}


/* 热搜榜 */

.hotContainer .title {
    font-size: 28rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1px solid #eee;
}

.hotList {
    display: flex;
    flex-wrap: wrap;
}

.hotItem {
    width: 50%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 26rpx;
}

.hotItem .order {
    margin: 0 10rpx;
}

.hotItem .iconimg {
    width: 35rpx;
    height: 20rpx;
    margin-left: 10rpx;
}