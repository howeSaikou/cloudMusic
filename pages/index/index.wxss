/* pages/index/index.wxss */

.banners {
    width: 100%;
    height: 300rpx;
}

.banners image {
    width: 100%;
    height: 100%;
}


/* 五个导航区域  */

.navContainer {
    display: flex;
}

.navItem {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.navItem .iconfont {
    width: 100rpx;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 50rpx;
    margin: 20rpx 0;
    color: #fff;
    text-align: center;
    border-radius: 50%;
    background-color: red;
}

.navItem .iconname {
    font-size: 26rpx;
}


/* 推荐歌曲 */

.recommendContainer {
    padding: 0 20rpx;
    height: 400rpx;
}


/* 推荐歌曲内容区 */

.recommendScroll {
    height: 250rpx;
    margin: 30rpx 0;
    display: flex;
}

.scrollItem {
    width: 200rpx;
    margin-right: 20rpx;
}

.scrollItem image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
}

.scrollItem text {
    font-size: 26rpx;
    /* 单行文本溢出 */
    /* text是内联，由内容撑开，不能隐藏 */
    display: block;
    /* 不换行 */
    white-space: nowrap;
    /* 隐藏超出部分 */
    overflow: hidden;
    /* 隐藏部分省略号代替 */
    text-overflow: ellipsis;
}


/* 排行榜 */

.topList {
    margin: 10rpx 20rpx;
}

.topListSwiper {
    display: flex;
    margin-top: 40rpx;
    height: 400rpx;
}

.swiperItem {
    width: 96%;
    background-color: #fbfbfb;
}

.swiperItem .topListTitle {
    font-size: 30rpx;
    line-height: 80rpx;
}

.topListItem {
    display: flex;
    margin-bottom: 10rpx;
}

.topListItem .count {
    width: 100rpx;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
}

.topListItem .topListName {
    font-size: 32rpx;
    height: 100rpx;
    line-height: 100rpx;
}

.topListItem image {
    width: 100rpx;
    height: 100rpx;
}